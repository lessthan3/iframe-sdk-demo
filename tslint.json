{
  "defaultSeverity": "error",
  "extends": [
      "tslint:recommended",
      "tslint-eslint-rules"
  ],
  "jsRules": {},
  "rules": {
    "forin": false,
    "member-access": [true, "no-public"],
    "member-ordering": [
      true,
      {
        "order": "fields-first",
        "alphabetize": true
      }
    ],
    "object-curly-spacing": [true, "always"],
    "quotemark": [true, "single"],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "variable-name": [
      true,
      "allow-leading-underscore"
    ]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": ["**/dist/**/*.ts", "test/**/*.ts"]
  }
}
